{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./lib",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true
  },
  "paths": {
    "*": [
      "types/*"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}